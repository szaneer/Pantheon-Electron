{
  "name": "@pantheon/electron-app",
  "version": "1.0.4",
  "description": "Cross-platform LLM access hub with device sharing capabilities",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run dev:vite\" \"wait-on http://127.0.0.1:3005 && NODE_ENV=development electron .\"",
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://127.0.0.1:3005 && NODE_ENV=development electron .\"",
    "dev:vite": "vite --host 127.0.0.1",
    "clean": "rm -rf dist dist-electron assets-built || true",
    "build": "npm run clean && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac --universal",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish always",
    "release:mac": "npm run build && electron-builder --mac --universal --publish always",
    "release:win": "npm run build && electron-builder --win --publish always",
    "release:linux": "npm run build && electron-builder --linux --publish always"
  },
  "keywords": [
    "llm",
    "ollama",
    "electron",
    "cross-platform",
    "ai"
  ],
  "author": "Siraj Zaneer <szaneer@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "dotenv": "^9.0.2",
    "electron": "^27.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.2.2",
    "vite": "^7.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "electron-log": "^5.4.1",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "lucide-react": "^0.294.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.3.6",
    "uuid": "^9.0.1",
    "ws": "^8.17.1"
  },
  "optionalDependencies": {
    "@roamhq/wrtc": "^0.9.0",
    "@roamhq/wrtc-darwin-arm64": "^0.9.0",
    "@roamhq/wrtc-darwin-x64": "^0.9.0"
  }
}
